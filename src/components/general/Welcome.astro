---
import { Image } from "astro:assets";

import logoImage from "../../assets/website/eyad.jpeg";

import slide1 from "../../assets/website/home/1.png";
import slide2 from "../../assets/website/home/2.png";
import slide4 from "../../assets/website/home/4.png";
---

<section
  class=" md:flex gap-8 container mx-auto  max-w-screen-xl px-16 py-10 lg:min-h-[500px] content-center font-pacamara prose lg:prose-xl prose-headings:font-changa prose-headings:mt-5 prose-headings:text-pacamara-dark prose-headings:font-bold lg:prose-h1:text-7xl prose-h1:mt-0 prose-heading:transition-all prose-heading:duration-300 prose-p:text-pacamara-primary/50 dark:prose-p:text-white/70 prose-p:mb-0 prose-p:transition-all prose-p:duration-300 prose-img:mt-0 prose-img:mb-0 dark:prose-headings:text-white"
>
  <Image
    src={logoImage}
    width={300}
    height={200}
    alt=""
    loading="eager"
    decoding="sync"
    class="relative object-cover size-[150px] lg:size-[220px] rounded-[15px] image-shine"
  />
  <h1>
    <span class="gradient-underline text-3xl md:text-7xl "
      ><span class=""
        >برمجة بأفكار مكتوبة: دليل المبرمجين من الأساسيات إلى الابتكار.</span
      ></span
    >
  </h1>
</section>

<section class="hidden my-10 md:flex justify-center gap-5 overflow-hidden py-4 sm:gap-10">
  <div
    class="relative flex-none grid place-items-center overflow-hidden bg-white dark:bg-pacamara-dark sm:w-3/12 rotate-2 rounded-[15px]"
  >
    <Image
      src={slide4}
      width={800}
      alt=""
      class="object-cover object-center image-shine h-[200px] md:h-[300px] rounded-sm"
    />
  </div>
  <div
    class="relative flex-none overflow-hidden bg-white dark:bg-pacamara-dark sm:w-3/12 -rotate-2 rounded-[15px]"
  >
    <Image
      src={slide2}
      width={800}
      alt=""
      class="object-contain image-shine h-[200px] md:h-[500px]"
    />
  </div>
  <div
    class="relative flex-none overflow-hidden bg-white dark:bg-pacamara-dark sm:w-3/12 rotate-2 rounded-[15px]"
  >
    <Image
      src={slide1}
      width={800}
      alt=""
      class="object-contain image-shine h-[200px] md:h-[500px]"
    />
  </div>
  <div
    class="relative flex-none grid place-items-center overflow-hidden bg-white dark:bg-pacamara-dark sm:w-3/12 -rotate-2 rounded-[15px]"
  >
    <Image
      src={slide4}
      width={800}
      alt=""
      class="object-cover object-center image-shine h-[200px] md:h-[300px] rounded-sm"
    />
  </div>
  <div
    class="relative flex-none overflow-hidden bg-white dark:bg-pacamara-dark sm:w-3/12 rotate-2 rounded-[15px]"
  >
    <Image
      src={slide2}
      width={800}
      alt=""
      class="object-contain image-shine h-[200px] md:h-[500px]"
    />
  </div>
</section>
